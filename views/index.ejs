<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>

    <a href="/new">Add a New Message</a>

    <ul>
        <% messages.forEach((message, index) => { %>
            <li>
                <strong><%= message.user %>:</strong> 
                <%= message.text %> 
                <em>(<%= message.added.toLocaleString() %>)</em>
                <a href="/message/<%= index %>">Open</a>
            </li>
        <% }) %>
          
    </ul>
  </body>
</html>
